{
  "name": "tic-tac-toe-tests",
  "version": "1.0.0",
  "description": "Comprehensive test suite for Tic Tac Toe game",
  "type": "module",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:game": "jest tests/game.test.js",
    "test:ai": "jest tests/ai.test.js",
    "test:ui": "jest tests/ui.test.js",
    "test:integration": "jest tests/integration.test.js",
    "test:all": "jest --coverage --verbose",
    "test:ci": "jest --ci --coverage --maxWorkers=2"
  },
  "keywords": [
    "tic-tac-toe",
    "testing",
    "jest",
    "tdd"
  ],
  "author": "QA Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@testing-library/dom": "^9.3.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/user-event": "^14.5.0",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  }
}
